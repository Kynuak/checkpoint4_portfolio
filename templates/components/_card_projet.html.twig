<article class="card-projet">
    <div class="top-card-media">
        <img src="{{ vich_uploader_asset(linkImage) }}" alt="">
    </div>
    <div class="container-body-card">
        <div class="hardSkills-card">
            {% for hardSkill in hardSkills %}
                <h4 class="hardSkill">{{ hardSkill.name }}</h4>
            {% endfor %}
        </div>
        <div class="description-projet">
            <p>{{ description }}</p>
        </div>
        <div class="link-projet-card">
            <a href="{{ urlGitProjet }}" target="_blank">
                <img class="link-github-linkedin" src="{{ asset("build/images/icones/icon-github.svg") }}" alt="github">
            </a>
            {% if urlProd %}
                <a class="link-prod-projet" href="">
                    <img class="img-link-prod" src="{{ asset('build/images/icones/home/icone-link.svg') }}" alt="link-prod">
                    <h4>{{ titleProjet }}</h4>
                </a>
            {% else %}
                <h4>{{ titleProjet }}</h4>
            {% endif %}
        </div>
    </div>
</article>